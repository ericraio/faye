<h2>Sign up for Faye today.</h2>
<div class="span4 well sign-up-form" style="float:right;">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div><%= f.text_field :name, :placeholder => 'Screen Name' %></div>
    <div><%= f.text_field :email, :placeholder => 'Email' %></div>
    <div><%= f.text_field :password, :placeholder => 'Password', :class => 'password' %></div>
    <div><%= f.text_field :password_confirmation, :placeholder => 'Password Confirmation', :class => 'password_confirmation' %></div>

    <div><%= f.submit "Create my account", :class => 'btn btn-warning create-account' %></div>
  <% end %>
<%= render "links" %>
</div>
